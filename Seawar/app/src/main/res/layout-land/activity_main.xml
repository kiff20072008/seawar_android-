<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="landscape"
    tools:context=".MainActivity">

    <android.support.v7.widget.GridLayout
        android:id="@+id/layout1"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:alignmentMode="alignBounds"
        app:columnCount="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="10"
        tools:ignore="MissingConstraints" />

    <android.support.v7.widget.GridLayout
        android:id="@+id/layout2"
        android:layout_width="309dp"
        android:layout_height="309dp"
        android:layout_marginLeft="264dp"
        android:layout_marginStart="264dp"
        android:layout_marginTop="16dp"
        app:columnCount="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="10"
        tools:ignore="MissingConstraints">


    </android.support.v7.widget.GridLayout>

    <Button
        android:id="@+id/but_rand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="260dp"
        android:text="@string/random"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/but_manul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="260dp"
        android:text="@string/manual"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/textout"
        android:layout_width="223dp"
        android:layout_height="37dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="260dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="84dp"
        android:layout_height="18dp"
        android:layout_marginLeft="88dp"
        android:layout_marginStart="88dp"
        android:text="@string/your_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginLeft="392dp"
        android:layout_marginStart="392dp"
        android:text="@string/computer_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <Button
        android:id="@+id/but_up"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginLeft="436dp"
        android:layout_marginStart="436dp"
        android:layout_marginTop="132dp"
        android:text="@string/up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/but_left"
        android:layout_width="67dp"
        android:layout_height="65dp"
        android:layout_marginLeft="368dp"
        android:layout_marginStart="368dp"
        android:layout_marginTop="196dp"
        android:text="@string/left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/but_turn"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginLeft="436dp"
        android:layout_marginStart="436dp"
        android:layout_marginTop="196dp"
        android:text="@string/turn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/but_right"
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:layout_marginLeft="504dp"
        android:layout_marginStart="504dp"
        android:layout_marginTop="196dp"
        android:text="@string/right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/but_apply"
        android:layout_width="200dp"
        android:layout_height="59dp"
        android:layout_marginLeft="376dp"
        android:layout_marginStart="376dp"
        android:layout_marginTop="16dp"
        android:text="@string/apply"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/but_down"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginLeft="436dp"
        android:layout_marginStart="436dp"
        android:layout_marginTop="264dp"
        android:text="@string/down"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>